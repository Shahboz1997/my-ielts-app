datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// Модель пользователя для авторизации
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique // Это Email из твоей модалки
  password  String   // Хеш пароля
  name      String?  
  files     File[]   
  createdAt DateTime @default(now())
}

// Модель для хранения информации о PDF файлах
model File {
  id        Int      @id @default(autoincrement())
  title     String   
  url       String   // Ссылка на PDF в Vercel Blob
  size      Int?     
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
